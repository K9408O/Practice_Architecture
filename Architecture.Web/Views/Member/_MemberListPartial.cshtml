@model IEnumerable<Architecture.Common.DTO.MemberDto>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>姓名</th>
            <th>手機</th>
            <th>市話</th>
            <th>性別</th>
            <th>生日</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">目前沒有資料</td>
            </tr>
        }
        else
        {
            foreach (var m in Model)
            {
                <tr data-id="@m.Id"
                    data-name="@m.Name"
                    data-phone="@m.Phone"
                    data-tel="@m.Tel"
                    data-gender="@m.Gender"
                    data-birthday="@m.Birthday.ToString("yyyy-MM-dd")">
                    <td>@m.Name</td>
                    <td>@m.Phone</td>
                    <td>@m.Tel</td>
                    <td>@m.Gender</td>
                    <td>@m.Birthday.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn btn-sm btn-warning btn-edit">編輯</button>
                        <button class="btn btn-sm btn-danger btn-delete">刪除</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



